<h2><center>U&I Mail App</center></h2>  
<hr>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :email, :class=>"login_box_label1" %>
  <%= f.email_field :email, autofocus: true %></div>
 
  <div><%= f.label :password,:class=>"login_box_label2" %>
    <%= f.password_field :password, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me, :style=>"float:left;margin-right:10px;" %> <%= f.label :remember_me %></div>
  <% end -%>

    <div align="center"><%= f.submit "Sign Me In",:class=>"btn btn-large btn-block btn-danger" %></div>
<% end %>

<%= render "devise/shared/links" %>
